<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="83dp"
        android:background="@color/colorPrimary"
        android:text="textviiiiiiii"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:background="@color/colorPrimary"
        android:text="You are on"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/StreakView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@color/colorPrimary"
        android:text="Text"
        android:textColor="@android:color/white"
        android:textSize="120sp"/>

    <TextView
        android:id="@+id/daystreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/StreakView"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:text="Day Streak.!!"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_gotowork"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:duplicateParentState="false"
        android:elevation="24dp"
        android:ellipsize="marquee"
        android:translationZ="24dp"
        android:text="Go To Workouts List"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/daystreak"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
